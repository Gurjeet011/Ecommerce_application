<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/descriptionpage"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/desimage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="top|left|right"
            android:scaleType="fitXY"

            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/desname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="brand name"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desimage"></TextView>


        <TextView
            android:id="@+id/oriprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pricedis"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desname"></TextView>

        <TextView
            android:id="@+id/disprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="priceori"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toEndOf="@+id/oriprice"
            app:layout_constraintTop_toBottomOf="@+id/desname"></TextView>

        <TextView
            android:id="@+id/freeshipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="free shiping on fashion orders equal and above rupees 999"
            android:textColor="#ED6F33"
            app:layout_constraintTop_toBottomOf="@id/disprice"
            >

        </TextView>

        <View
            android:id="@+id/viewline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ACABA9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/freeshipping"
            app:layout_constraintTop_toBottomOf="@+id/freeshipping"
            tools:ignore="MissingConstraints">

        </View>

        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewline">

            <TextView
                android:id="@+id/tsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textSize="25dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="Fit Guide"
                android:textColor="#FFA000"
                android:textSize="25dp">

            </TextView>

         <CheckBox
             android:id="@+id/cbm"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/tsize"
             android:text="M">

         </CheckBox>
            <CheckBox
                android:id="@+id/cbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tsize"
                android:layout_toRightOf="@+id/cbm"
                android:text="S"
                tools:ignore="DuplicateIds">

            </CheckBox>
            <CheckBox
                android:id="@+id/cbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tsize"
                android:layout_toRightOf="@+id/cbs"
                android:text="L">

            </CheckBox>
            <CheckBox
                android:id="@+id/cbxl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tsize"
                android:layout_toRightOf="@+id/cbl"
                android:text="XL">

            </CheckBox>
            <CheckBox
                android:id="@+id/chs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tsize"
                android:layout_toRightOf="@+id/cbxl"
                android:text="XXL">

            </CheckBox>

        </RelativeLayout>

        <View
            android:id="@+id/viewline2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ACABA9"
            app:layout_constraintTop_toBottomOf="@id/linear1"
            >

        </View>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewline2">

            <TextView
                android:id="@+id/t9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="Sold by:Landmark Online India Pvt Ltd"
                android:textColor="@color/black"
                android:textSize="20dp">

            </TextView>


        </LinearLayout>

        <View
            android:id="@+id/viewline3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#ACABA9"
            app:layout_constraintTop_toBottomOf="@id/linear2">
        </View>

        <RelativeLayout
            android:id="@+id/reee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewline3">

            <TextView
                android:id="@+id/txx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Overview"
                android:textSize="25dp">

            </TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_arrow_forward_24">

            </ImageView>

            <View
                android:id="@+id/viewline4"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:layout_below="@+id/txx"
                android:layout_marginTop="0dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:background="#512DA8"
                tools:ignore="DuplicateIds"></View>


        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>